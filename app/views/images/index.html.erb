<h1>画像インデックス</h1>

<div>
<%= link_to '新規作成', new_image_url, class: "btn btn-primary" %>
</div>
<br>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th><th>サムネイル</th><th>識別子</th><th>タイプ</th>
    </tr>
  </thead>
  <tbody>
    <%- @images.each do |image| -%>
      <tr>
        <td><%= image.id %></td>
        <td><%= image_tag image.content.url(:thumb) %></td>
        <td><%= image_name_link(image) %></td>
        <td><%= image.image_type %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
