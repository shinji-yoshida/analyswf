<h1>swf 詳細</h1>

<table class="table table-striped table-bordered">
  <tr><td>ID</td><td><%= @swf.id %></td></tr>
  <tr><td>シリーズ</td><td><%= swf_series_name_link(@swf_series) %></td></tr>
</table>

<%= link_to 'フラッシュ表示', swf_binary_url(@swf.swf_binary), class: 'btn btn-info' %>
<%= link_to '編集', edit_swf_url(@swf), class: 'btn' %>

<h2>ターゲット</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr><td>識別子</td><td>タイプ</td><td>オフセット</td></tr>
  </thead>
  <tbody>
    <%- @swf_series.targets.each do |name, type| -%>
      <tr><td><%= name %></td><td><%= type %></td></tr>
    <%- end -%>
  </tbody>
</table>

<h2>JPEG オフセット</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr><td>オフセット</td><td>ターゲット割り当て</td></tr>
  </thead>
  <tbody>
    <%- @swf.offsets.select{|o| o.offset_type == TargetType::JPEG}.each do |o| -%>
      <tr><td><%= o.value %></td><td><%=  %></td></tr>
    <%- end -%>
  </tbody>
</table>

<h2>GIF オフセット</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr><td>オフセット</td><td>ターゲット割り当て</td></tr>
  </thead>
  <tbody>
    <%- @swf.offsets.select{|o| o.offset_type == TargetType::GIF}.each do |o| -%>
      <tr><td><%= o.value %></td><td><%=  %></td></tr>
    <%- end -%>
  </tbody>
</table>