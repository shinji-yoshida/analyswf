<h1><%= swf_series_name_link(@swf_series) %> の TestResources</h1>

<%= link_to '新規作成', new_test_resource_url(swf_series_id: @swf_series.id), class: 'btn btn-primary' %><br>
<br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th><th>サムネイル</th><th>識別子</th><th>タイプ</th>
    </tr>
  </thead>
  <tbody>
    <%- @test_resources.each do |resource| -%>
      <tr>
        <td><%= resource.id %></td>
        <td><%= image_tag resource.image.content.url(:thumb) %></td>
        <td><%= resource.image.name %></td>
        <td><%= resource.image.image_type %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
